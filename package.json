{
    "description": "Repository to build interfaces and configure projects",
    "license": "MIT",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*",
            "example-app"
        ]
    },
    "scripts": {
        "typecheck": "tsc --noEmit --composite false",
        "lint": "eslint '**/*.{js,ts,tsx}'",
        "example-app": "yarn workspace @elementium/example-app",
        "color": "yarn workspace @elementium/color",
        "eslint-config": "yarn workspace @elementium/eslint-config",
        "eslint-config-typescript": "yarn workspace @elementium/eslint-config-typescript",
        "native": "yarn workspace @elementium/native",
        "theme": "yarn workspace @elementium/theme",
        "tsconfig": "yarn workspace @elementium/tsconfig",
        "prepack": "yarn color prepack && yarn native prepack && yarn theme prepack"
    }
}
