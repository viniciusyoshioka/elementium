{
    "name": "@elementium/color",
    "description": "Color manipulation library for JavaScript and TypeScript",
    "version": "0.0.1",
    "license": "MIT",
    "main": "lib/commonjs/index.js",
    "module": "lib/module/index.js",
    "types": "lib/typescript/src/index.d.ts",
    "source": "src/index.ts",
    "react-native": "src/index.ts",
    "files": [
        "lib/",
        "src/"
    ],
    "scripts": {
        "build": "yarn build:commonjs && yarn build:module && yarn build:declarations",
        "build:commonjs": "tsc -p tsconfig-commonjs.json && babel lib/commonjs-temp --out-dir lib/commonjs --extensions \".js\" --delete-dir-on-start --config-file ./.babelrc-commonjs",
        "build:module": "babel src --out-dir lib/module --extensions \".ts,.tsx\" --delete-dir-on-start",
        "build:declarations": "tsc -p tsconfig-declarations.json"
    },
    "devDependencies": {
        "@babel/cli": "^7.21.0",
        "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-typescript": "^7.21.0",
        "@elementium/eslint-config": "*",
        "@elementium/eslint-config-typescript": "*",
        "@typescript-eslint/eslint-plugin": "^5.52.0",
        "@typescript-eslint/parser": "^5.52.0",
        "babel-plugin-transform-remove-console": "^6.9.4",
        "eslint": "^8.34.0",
        "typescript": "^4.9.5"
    }
}
